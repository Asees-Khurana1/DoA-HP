<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GridScreenActivity">

    <!-- Header Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/darkgreen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp">

        <!-- "Government Schemes" Text -->
        <TextView
            android:id="@+id/government_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Government Schemes"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Logo Image Aligned to Bottom -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="App Logo"
            android:scaleType="centerInside"
            android:src="@drawable/hpmap"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- GridLayout with 6 Cards (2x3), centered on the screen -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:columnCount="2"
        app:rowCount="3"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Card: Agriculture -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openMainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/agriculture"
                    android:contentDescription="Agriculture Icon"
                    android:layout_marginBottom="8dp" />

                <!-- Centered Text at Bottom -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agriculture"
                    android:textSize="17sp"
                    android:textColor="@color/darkgreen"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|bottom"
                    android:layout_gravity="bottom|center_horizontal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Second Card: Horticulture -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openPlaceholderActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/horticulture"
                    android:contentDescription="Horticulture Icon"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Horticulture"
                    android:textSize="17sp"
                    android:textColor="@color/darkgreen"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|bottom"
                    android:layout_gravity="bottom|center_horizontal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Third Card: Tourism -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openPlaceholderActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/tourism"
                    android:contentDescription="Tourism Icon"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Tourism"
                    android:textSize="17sp"
                    android:textColor="@color/darkgreen"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fourth Card: Industries -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openPlaceholderActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/industries"
                    android:contentDescription="Industries Icon"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Industries"
                    android:textSize="17sp"
                    android:textColor="@color/darkgreen"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|bottom"
                    android:layout_gravity="bottom|center_horizontal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fifth Card: Expenditure -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openPlaceholderActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/expenditure"
                    android:contentDescription="Expenditure Icon"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expenditure"
                    android:textSize="17sp"
                    android:textColor="@color/darkgreen"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|bottom"
                    android:layout_gravity="bottom|center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sixth Card: Telecommunication -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openPlaceholderActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/telecommunication"
                    android:contentDescription="Telecommunication Icon"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telecommunication"
                    android:textSize="17sp"
                    android:textColor="@color/darkgreen"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|bottom"
                    android:layout_gravity="bottom|center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
